@model CarTypeListViewModel

@{
    ViewData["Title"] = "Brands";
}
<p>
    <a class="addbtn whitespace" asp-controller="Cars" asp-action="Detail" asp-route-id="0">Add Car</a>
</p>
<h2 class="whitespace">Brands</h2>



@foreach (var item in Model.CarTypes)
{

    <table class="table">
        <thead>
            <tr>
              
              <h4 class="whitespace"> @Html.DisplayFor(modelItem => item.Brand)</h4>
            </tr>
        </thead>

        <tbody>

            <tr>


                <th>License Plate</th>
                <th>Owner</th>
                <th></th>
                <th></th>

            </tr>

            <tr>
                @foreach (var car in item.Cars)
        {
            <tr>

                <td>@Html.DisplayFor(carItem => car.Plate)</td>
                <td>@Html.DisplayFor(carItem => car.Owner)</td>

                <td>
                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id">Edit</a>
                </td>
                <td>
                    <a class="delbtn" asp-controller="Cars" asp-action="Delete" asp-route-id="@car.Id">Delete</a>
                </td>
            </tr>
}
           
            </tbody>


    </table>
}